<div class="card mx-auto col-md-6 border-dark shadow-lg">

    <!-- NAME -->
    <div class="card-header text-white bg-dark fw-bold fs-3 text-center ">{{product.name}}</div>

    <div class="card-body">

        <!-- PRICE -->
        <h4 class="card-title"> $ {{product.price}}</h4>
        <!-- DESCRIPTION -->
        <p class="card-text">{{product.description}}</p>
        <!-- CATEGORY -->
        <p class="card-text"><small class="text-muted">{{product.category}}</small></p>
        <!-- IMAGE -->
        <img src="{{product.image}}" class="card-img-top" width="100" height="100">


        <div class="container mt-3">
            <div class="row">
                <div class="col">
                    <!-- EDIT BTN -->
                    <form action="/products/edit/{{product._id}}" method="GET">
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary btn-success" type="submit">Editar</button>
                        </div>
                    </form>
                </div>

                <div class="col">
                    <!-- DELETE BTN -->
                    <form action="/products/{{product._id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary btn-danger" type="submit">Borrar</button>
                        </div>
                    </form>
                </div>

            </div>



        </div>

    </div>