{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "lib": [
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "~/*": [
        "./*"
      ],
    },
    "types": [
      "@types/node",
      "@types/express",
      "@types/cors"
    ],
    "noImplicitAny": true
  },
  "include": [
    "./src/**/*"
  ],
}
